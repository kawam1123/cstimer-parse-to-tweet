{
  "name": "csTimer-Parser",
  "version": "0.5",
  "description": "csTimerの統計データをパースしてTwitterにポストします",
  "default_locale": "ja",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs"], 
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts":[
    {
      "matches":["https://cstimer.net/*"],
      "js":[
        "browser-polyfill.min.js",
        "jquery-3.5.1.min.js","content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "page_action": {
    "default_icon": {
      "16": "images/cstimer-parser16.png",
      "32": "images/cstimer-parser32.png",
      "48": "images/cstimer-parser48.png",
      "128": "images/cstimer-parser128.png"
    }
  },
  "icons": {
    "16": "images/cstimer-parser16.png",
    "32": "images/cstimer-parser32.png",
    "48": "images/cstimer-parser48.png",
    "128": "images/cstimer-parser128.png"
  },
  "manifest_version": 2
}
